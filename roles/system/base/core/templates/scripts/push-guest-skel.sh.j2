#!/bin/bash

synchub_address="{{ synchub_address }}"
synchub_port="{{ synchub_port }}"

source="/home/guest/"
destination="/share/guest-skel/"

rsync -v -r -l -t --chmod=ugo=rwX --delete --delete-excluded \
    -e "ssh -p ${synchub_port}" \
    --include "Área de trabalho/***" \
    --include "Documentos/***" \
    --include "Downloads/***" \
    --include "Imagens/***" \
    --include "Modelos/***" \
    --include "Música/***" \
    --include "Público/***" \
    --include "Vídeos/***" \
    --include ".bash_logout" \
    --include ".bash_profile" \
    --include ".bashrc" \
    --include ".face" \
    --include ".face.icon" \
    --include ".init.sh" \
    --include ".profile" \
    --include ".gitconfig" \
    --include ".config/***" \
    --include ".docker/***" \
    --include ".java/***" \
    --include ".local/***" \
    --include ".nvm/***" \
    --include ".pyenv/***" \
    --include ".vscode/***" \
    --exclude "*" \
    "${source}" \
    "push@${synchub_address}:${destination}"
